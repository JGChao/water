/* pages/my/my.wxss */
.box{
  width:100%;
  height:100%
}
.head{
  width:100%;
  height:180rpx;
  position: relative;
}
.ion{
  display: block;
  height: 40rpx;
  width:40rpx;
  position: absolute;
  left: 24rpx;
  top:24rpx;
}
.ion1{
  display: block;
  height: 50rpx;
  width:50rpx;
  position: absolute;
  right: 24rpx;
  top:24rpx;
}
.portrait{
  position: absolute;
  width:150rpx;
  height:150rpx;
  border-radius:50%;
  left: 305rpx;
  top: 100rpx;
}
.portrait image{
  width:100%;
  height: 100%;
  border-radius:50%;
}
.name{
  width: 100%;
  font-size:50rpx;
  color: #333;
  text-align: center;
  margin-top: 80rpx;
}
.rank{
  width: 100%;
  font-size:30rpx;
  color: #888;
  text-align: center;
  margin-top: 10rpx;
}
.fans{
  display: flex;
  justify-content: space-between;
  width: 100%;
  box-sizing: border-box;
  padding: 0 180rpx;
  padding-bottom:10rpx;
  border-bottom:1rpx solid #F2F2F2;
}
.fans text{
  font-size: 30rpx;
  color: #808080;

}
.storp{
  width:100%;
  margin-top: 15rpx;
  overflow: hidden;
}
.storp view{
  width: 33.33%;
  float: left;
}
.storp view view{
  width: 100%;
  font-size: 26rpx;
  color: #808080;
  line-height: 1;
  text-align: center;
}
.storp view .one{
  font-size: 32rpx;
  color: #333;
  font-weight:bold;
}
.nav{
  width:100%;
  height: 150rpx;
  margin: 20rpx 0;
  background-color:white;
  display: flex;
  justify-content: space-around;
}
.nav1{
  display: block;
  width: 150rpx;
  height: 100%;
  box-sizing: border-box;
  padding-top:30rpx;
}
.nav1 image{
  display: block;
  width: 60rpx;
  height: 60rpx;
  margin: 0 auto;
  /* background-color:#FEECEE; */
border-radius: 50%;
}
.nav1 view{
  width:100%;
  font-size: 28rpx;
  color:#333;
  text-align: center;
  line-height: 2;
}
.list{
  width:100%;
  background-color:white;
}
.list1{
  display: block;
  width: 100%;
  height: 80rpx;
  box-sizing: border-box;
  border-bottom: 1rpx solid #F2F2F2;
  padding: 0 24rpx;
  overflow: hidden;
}
.list1 .list_img{
  display: block;
  width: 40rpx;
  height: 50rpx;
  float: left;
  margin-right: 24rpx;
  margin-top:15rpx;
}
.list1 .txt{
  height: 100%;
  line-height: 80rpx;
  font-size: 28rpx;
  color:#333;
  margin-left: 24rpx;
}