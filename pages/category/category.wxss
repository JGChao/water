/* pages/category/category.wxss */
.center{
    width:750rpx;
    position: absolute;
    top:0;
    bottom:0;
    padding:0 24rpx;
    box-sizing:border-box;
    display:flex;
    justify-content: space-between;
}

/*左*/
.center .left{
    position: absolute;
    top:0;
    bottom:0;
    width:200rpx;
    box-sizing: border-box;

}
.center .left .lf-center{
    width:100%;
    height: auto;

}
.center .left .kuai{
    width:200rpx;
    background:#f7f7f7;
    margin-bottom:2rpx;
    font-size:26rpx;
    text-align:center;
    line-height:104rpx;
    color:#333;

}
.center .left .k1{
    width:200rpx;
    height:106rpx;
    background:white;
    border-left:4rpx solid #ffcb3f;
    margin:0;
    font-size:26rpx;
    text-align:center;
    line-height:106rpx;
    color:#333;
}
/*右*/

.center .right{
    width:504rpx;
    position: absolute;
    left: 220rpx;
    top:0;
    bottom:0;
    overflow-y: auto;
    /* padding-left: 20rpx;  */
    box-sizing:border-box;
    
}
.center .right .rt-center{
    height: auto;
}
.center .right .top{
    width:504rpx;
    height:134rpx;
    box-sizing: border-box;
    margin-bottom:46rpx;
}
.center .right .top swiper swiper-item{
  width: 100%;
  height: 100%;
}
.center .right .top swiper{
  width: 100%;
  height: 100%;
}
.center .right .top image{
    width: 100%;
    height: 100%;
}
.center .right .cen{
    width:504rpx;
    height:60rpx;
    box-sizing: border-box;
    margin-bottom:8rpx;
    display: flex;
    justify-content:center;
    align-items: center;
}
.center .right .cen .c{
    color:#010101;
    font-size:32rpx;
}
.center .right .cen .l{
    width:84rpx;
    height:2rpx;
    margin-right:18rpx;
    background-color:#ffcb3f;
}
.center .right .cen .r{
    width:84rpx;
    height:2rpx;
    margin-left:18rpx;
    background-color:#ffcb3f;
}
.center .bottom{
    height:auto;

    overflow: hidden;
    /* box-sizing: border-box; */

    /* display:flex;
     justify-content: space-between;*/
}
.center .bottom .right-roll{
  overflow: hidden;
}
.center .bottom .ti{
    width:140rpx;
    height:234rpx;

    float:left;
    margin-right:18rpx;
}
.center .bottom .ti image{
    display:block;
    width:150rpx;
    height:142rpx;
}
.center .bottom .ti text{
    display:block; 
    height:92rpx;
    text-align: center;
    line-height: 92rpx;
    font-size:22rpx;
    color:#000;
    text-overflow: ellipsis;
    overflow: hidden;
    white-space: nowrap;
    margin: 0 auto;
}