.ul{
  width:702rpx;
  margin: 0 auto;
}
.ul .li{
  width:100%;
  height:250rpx;
  border-bottom:2rpx solid rgba(0,0,0,0.05);
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.ul .li .opt{
  width: 24rpx;
  height: 24rpx;
  background-color: #e7f6ff;
  border-radius: 50%;
}
.ul .li .opt1{
  background-color: #37e06f;
}
.ul .li .img-box{
  width: 174rpx;
  height: 174rpx;
  background-color: #fff;
  box-shadow: 0px 1px 21px 0px rgba(223, 223, 223, 0.43);
  border-radius: 10px;
  overflow: hidden;
}
.ul .li .img-box image{
  width:100%;
  height:100%;
}
.ul .li .content{
  width:300rpx;
  color: #000000;
  opacity: 0.6;
  font-size: 30rpx;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}
.nowrap{
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.ul .li .content .name{
  opacity: 0.8;
  font-weight: bold;
}
.ul .li .content .price{
  font-size: 26rpx;
  color: #8e9397;
  opacity: 0.8;
  margin-top:18rpx;
}
.ul .li .num{
  width:150rpx;
  display: flex;
  justify-content: space-between;
  font-size: 30rpx;
}
.ul .li .num .reduce{
  width:32rpx;
  height: 32rpx;
  background-color: #9dd9ff;
  box-shadow: 0px 5px 12px 0px rgba(59, 172, 254, 0.43);
  border-radius: 50%;
  color:#fff;
  text-align: center;
  line-height: 32rpx;
}
.ul .li .num .add{
  width:32rpx;
  height: 32rpx;
  background-color: #36a8fe;
  box-shadow: 0px 5px 12px 0px rgba(59, 172, 254, 0.43);
  border-radius: 50%;
  color:#fff;
  text-align: center;
  line-height: 32rpx;
}
.ul .li .num text{
  color: #000000;
  opacity: 0.6;
}

.foot{
  width:750rpx;
  height:108rpx;
  padding:0 24rpx;
  background-color:#f1faff;
  box-sizing: border-box;
  position:fixed;
  left: 0;
  bottom:0;
  font-size: 24rpx;
  color: #3bacfe;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.foot .all{
  width:120rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.foot .all .select-all{
  width: 24rpx;
  height: 24rpx;
  background-color: #e7f6ff;
  border-radius: 50%;
  margin-right: 24rpx;
}
.foot .all .select-all1{
  background-color: #37e06f;
}
.foot .all text{
  font-weight:bold;
}
.foot .center{
  width:300rpx;
  height:80rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.foot .center .cen .price{
  font-size:30rpx;
}
.foot .center .cen1{
  opacity: 0.6;
}
.foot .center .cen1 .carriage{
  margin-right:15rpx;
}
.foot .settle{
  width: 240rpx;
  height: 60rpx;
  border-radius: 30rpx;
  font-size: 24rpx;
  color: #fff;
  background: linear-gradient(to right,#37d66f,#31d69a);
  background: -webkit-linear-gradient(left,#37d66f,#31d69a);
  box-shadow: 0 4rpx 2rpx 0 rgba(55,223,116,0.75);
}